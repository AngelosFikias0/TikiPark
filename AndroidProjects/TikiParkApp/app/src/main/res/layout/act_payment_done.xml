<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3FDE2A1"
    android:padding="24dp"
    tools:context=".activities.PaymentDone">

    <!-- Title -->
    <TextView
        android:id="@+id/payment_done_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_completed"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_mono"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message -->
    <TextView
        android:id="@+id/payment_done_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_receipt_will_be_sent_to_your_email_address"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_mono"
        app:layout_constraintTop_toBottomOf="@id/payment_done_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/paymentDone_confirm_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="@string/Continue"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/ubuntu_mono"
        android:background="@color/button_background"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/payment_done_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
