    <!-- Search bar -->

    <com.google.android.gms.maps.MapView
        android:id="@+id/findParking_map_gmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/searchbar_bg"
        android:paddingLeft="15dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:fontFamily="@font/ubuntu_mono"
            android:text="Selected Location: "
            android:textStyle="bold"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/findParking_location_txt"
            android:layout_width="match_parent"
            android:textColor="#ffff"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_mono"
            android:textStyle="bold"
            android:textSize="36sp"
            android:text="Some location."/>

    </LinearLayout>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom|left"
        android:id="@+id/findParking_cancel_Btn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@color/button_background"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <Button
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom|right"
        android:id="@+id/findParking_confirm_Btn"
        android:background="@color/button_background"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Confirm"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_mono"
        android:textStyle="bold" />

        <Spinner
        android:id="@+id/findParking_parkingSpots_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/findParking_map_gmap"
        app:layout_constraintEnd_toEndOf="@+id/findParkingTxt"
        app:layout_constraintStart_toStartOf="@+id/findParkingTxt"
        app:layout_constraintTop_toBottomOf="@+id/findParkingTxt"
        app:layout_constraintVertical_bias="0.25" />

</FrameLayout>