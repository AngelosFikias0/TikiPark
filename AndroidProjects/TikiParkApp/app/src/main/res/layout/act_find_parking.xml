<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3FDE2A1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".activities.FindParking">

    <TextView
        android:id="@+id/findParkingTxt"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Εισαγωγή Τοποθεσίας"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search bar -->

    <Button
        android:id="@+id/findParking_Cancel_Btn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="1dp"
        app:backgroundTint="@null"
        android:background="@drawable/rounded_green_button"
        android:text="Ακυρωση"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_mono"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/findParking_Confirm_Btn" />

    <Button
        android:id="@+id/findParking_Confirm_Btn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_green_button"
        android:text="Επιβεβαιωση"
        app:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_mono"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/findParking_Cancel_Btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/searchbar_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@+id/findParkingTxt"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/findParking_Search_InputTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/findParking_ClearSearch_ImgBtn"
            android:background="@android:color/transparent"
            android:hint="Αναζήτηση"
            android:padding="0dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/findParking_ClearSearch_ImgBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="Clear"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/findParking_map_gmap"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.26999998" />

</androidx.constraintlayout.widget.ConstraintLayout>